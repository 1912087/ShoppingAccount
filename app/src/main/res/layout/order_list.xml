<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/order_goods_list_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/logo"/>
                    <TextView
                        android:id="@+id/order_goods_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_goods_list_img"
                        android:layout_alignRight="@id/order_goods_list_img"
                        android:layout_marginBottom="5dp"
                        android:textSize="17dp"
                        android:textColor="#000000"
                        android:text="상품명"/>
                    <TextView
                        android:id="@+id/order_goods_list_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_goods_list_name"
                        android:layout_toLeftOf="@id/order_goods_list_own"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="5dp"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:text="가격"/>
                    <TextView
                        android:id="@+id/order_goods_list_own"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_goods_list_name"
                        android:layout_alignRight="@id/order_goods_list_name"
                        android:layout_marginBottom="2dp"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="원"/>
                    <TextView
                        android:id="@+id/order_goods_list_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_goods_list_account"
                        android:layout_toLeftOf="@id/order_goods_list_count"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="5dp"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="수량"/>
                    <TextView
                        android:id="@+id/order_goods_list_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_goods_list_account"
                        android:layout_alignRight="@id/order_goods_list_name"
                        android:layout_marginBottom="15dp"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="개"/>
                    <Button
                        android:id="@+id/return_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="반품하기"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/gradient1"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:layout_below="@id/order_goods_list_count"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>