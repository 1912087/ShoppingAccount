<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/category1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/category1_ivFavorite"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/category1_image"
                    android:layout_alignLeft="@id/category1_image"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/category1_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/category1_image"
                    android:layout_alignLeft="@id/category1_image"
                    android:textColor="#00000000"
                    android:text="검색"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/category1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/category1_image"
                    android:layout_alignRight="@id/category1_image"
                    android:layout_marginBottom="10dp"
                    android:text="상품명"
                    android:textColor="#000000"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category1_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/category1_name"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@id/own1"
                    android:text="가격"
                    android:textSize="35px" />
                <TextView
                    android:id="@+id/own1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:layout_below="@id/category1_name"
                    android:layout_alignRight="@id/category1_image"
                    android:text="원"
                    android:textSize="35px" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
